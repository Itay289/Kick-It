<div class="comments">
  
  <h2 class="comment-headline">Add a comment:</h2>

  <%= form_for Comment.new ,url: topic_subtopic_comments_path(:subtopic_id => @sub_topic.id , :id => @sub_topic.id) , html: { method: :post } do |f| %>
    <div class="text">
      <p><%= f.label :body %><br>
        <%= f.text_area :body %></p>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>  
    </div>
  <% end %>  

  <h2 class="comment-headline"><%= @sub_topic.comments.count %> Comments:</h2>

</div>
