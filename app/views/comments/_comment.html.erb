<div class="comments">
  
  <h2 class="comment-headline">Add a comment:</h2>

  <%= form_for ([@comment, Comment.new]) do |f| %>
    <div class="text">
      <p><%= f.label :name %><br>
        <%= f.text_field :name %></p>
      <p><%= f.label :body %><br>
        <%= f.text_area :body %></p>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>  
    </div>
  <% end %>  

  <h2 class="comment-headline">Comments:</h2>

<% Comment.all.each_with_index do |comment,i| %>
  <div class="well well-small"> 
    <p><%= (i + 1).to_s + "." %></p>
    <p><%= comment.name %></p>
    <p><strong>Comment:</strong><%= comment.body %></p>
    <%= comment.created_at.strftime("%m/%d/%Y") %>
  </div> 
   
<% end %>


</div>
