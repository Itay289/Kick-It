<h2>Add a comment:</h2>

<%= form_for([post, Comment.new]) do |f| %>
  <div class="commentCreate" >
    <p><%= f.label :user %><br>
      <%= f.text_field :user %></p>
    <p><%= f.label :body %><br>
      <%= f.text_area :body %></p>
    <p><%= f.submit %></p>  
  </div>

<% end %>


<h2>Comments:</h2>

<% sub_topic.comments.each_with_index do |comment,i| %>
  <div class='commentShow'> 
    <p><%= (i + 1).to_s + "." %></p>
    <p><%= comment.user %></p>
    <p><strong>Comment:</strong><%= comment.body %></p>
    <%= comment.created_at.strftime("%m/%d/%Y") %>
  </div> 
   
<% end %>